   pages = {3878-3888},
   title = {Routine Microsecond Molecular Dynamics Simulations with AMBER on GPUs. 2. Explicit Solvent Particle Mesh Ewald},
   volume = {9},
   url = {https://pubs.acs.org/doi/10.1021/ct400314y},
   year = {2013},
}
