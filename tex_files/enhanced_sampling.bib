   doi = {10.1021/jp508052q},
   issn = {1520-6106},
   issue = {7},
   journal = {The Journal of Physical Chemistry B},
   month = {2},
   pages = {3034-3045},
   title = {Multipolar Force Fields and Their Effects on Solvent Dynamics around Simple Solutes},
   volume = {119},
   url = {https://pubs-acs-org.unr.idm.oclc.org/doi/pdfplus/10.1021/jp508052q http://pubs.acs.org/doi/10.1021/jp508052q},
